<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>curso-jsp</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
  	<param-name>Estado</param-name>
  	<param-value>Pará</param-value>
  </context-param>
  
  <filter>
  <!-- Filtro responsável por interceptar todas as requisições do @WebFilter e 
       também iniciar uma conexão com banco de dados -->
  	<filter-name>filter</filter-name>
  	<filter-class>filter.Filter</filter-class>
  </filter>
</web-app>